{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "core/*": ["src/core/*"],
      "lib/*": ["src/lib/*"],
      "screens/*": ["src/screens/*"],
      "navigation/*": ["src/navigation/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
